extends base.pug

block title 
    title Register Page

block content
    div.container
        h1( style = "text-align: center") Sign Up Page
        div(style = "margin: auto ; width: 30%")
            form(action="/register" method = "post") 
                div.form-group
                    label(for="name") Name:
                    input(type="name",class = "form-control" name="name" id="name" placeholder = "Enter Your Name")
                div.form-group
                    label(for="email") Email:
                    input(type="email",class = "form-control" name="username" id="email" placeholder = "Enter Your Email")
                div.form-group
                    label(for="password") Password:
                    input(type="password",class = "form-control" name="password" id="password" placeholder= "Password")
                div( class = "form-group")
                    button(type = "submit" class = "btn btn-lg btn-primary btn-block" style = "margin: auto ; width: 30%") Register
            div(style = "text-align: center") 
                p Already have an account? #[a(href="/login") Login]